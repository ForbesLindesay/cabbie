{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": false,
    "importHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2018"]
  }
}
